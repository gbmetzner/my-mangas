# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                            com.gbm.mymangas.controllers.Application.index

POST        /publishers                                  com.gbm.mymangas.controllers.PublisherController.create
GET         /publishers/:name                            com.gbm.mymangas.controllers.PublisherController.findByName(name: String)

POST        /collections                                 com.gbm.mymangas.controllers.CollectionController.create
GET         /collections/:name                           com.gbm.mymangas.controllers.CollectionController.findByName(name: String)

POST        /mangas                                      com.gbm.mymangas.controllers.MangaController.create
POST        /mangas/cover/upload                         com.gbm.mymangas.controllers.MangaController.uploadCover
PUT         /mangas/:id                                  com.gbm.mymangas.controllers.MangaController.update(id: java.util.UUID)
GET         /mangas/search                               com.gbm.mymangas.controllers.MangaController.filter
GET         /mangas/:name                                com.gbm.mymangas.controllers.MangaController.findByName(name: String)
GET         /mangas/:collectionName/latest-number        com.gbm.mymangas.controllers.MangaController.latestNumber(collectionName: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)